<%= form_for(unit) do |f| %>

<% if unit.errors.any? %>
  <% unit.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :course %>
  <%= f.collection_select :course_id, Course.all, :id, :title %>
</div>

<div class="field">
  <%= f.label :teachers_name %>
  <%= f.text_field :teachers_name %>
</div>

<div class="actions">
  <%= f.submit "Enviar" %>
</div>

<% end %>
