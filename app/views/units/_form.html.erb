<%= form_for(unit) do |f| %>

<% unit.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :course %>
  <%= f.collection_select :course_id, @courses, :id, :title %>
</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>
